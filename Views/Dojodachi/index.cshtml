<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>DojoDachi</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <style>
        .card-footer {
            margin-top: -30px;
        }
        img {
            margin-bottom: 5px;
        } 
    </style>
</head>
<body>

    <div class="container">

        <div class="jumbotron">
            <h1>DojoDachi</h1>
        </div>

        <div class="row">
            <div class="col-sm-8 offset-sm-2">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col">
                                <label for="happy">Happiness:</label>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped" style="width: @ViewBag.happiness%" id="happy"></div>
                                </div>
                            </div>
                            <div class="col">
                                <label for="full">Fullness:</label>
                                <div class="progress">
                                    <div class="progress-bar bg-danger progress-bar-striped" style="width: @ViewBag.fullness%" id="full"></div>
                                </div>
                            </div>
                            <div class="col">
                                <label for="energy">Energy:</label>
                                <div class="progress">
                                    <div class="progress-bar bg-success progress-bar-striped" style="width: @ViewBag.energy%" id="energy"></div>
                                </div>
                            </div>
                            <div class="col">
                                <label for="meals">Meals:</label>
                                <div id="meals">
                                    @{
                                        if(ViewBag.meals < 6){
                                            for(int i=0; i<ViewBag.meals; i++)
                                            {
                                                <span>üçî</span>
                                            }
                                        }
                                        else
                                        {
                                            <span>üçî X @ViewBag.meals</span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <img src="@ViewBag.img" alt="momiji">
                        @{
                            if(ViewBag.message == null)
                            {
                                <div class="alert alert-secondary" style="opacity:0;">
                                    No status
                                </div>
                            }
                            else
                            {
                                if(ViewBag.message.EndsWith(":("))
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.message
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.message
                                    </div>
                                }
                            }
                        }
                    </div> 
                    <div class="card-footer text-center">
                        <div class="btn-group">
                            <a class="btn btn-primary" href="/dojodachi/feed">feed</a>
                            <a class="btn btn-success" href="/dojodachi/play">play</a>
                            <a class="btn btn-warning" href="/dojodachi/work">work</a>
                            <a class="btn btn-danger" href="/dojodachi/sleep">sleep</a>
                        </div>
                    </div>
                </div>
            </div>  
        </div>

    </div>

</body>
</html>